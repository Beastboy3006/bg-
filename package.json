{
    "name": "portal",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@adobe/pdfservices-node-sdk": "^2.2.2",
        "@dynatrace/oneagent-sdk": "^1.4.1",
        "@sap/cds": "^5.9.8",
        "@sap/cds-odata-v2-adapter-proxy": "^1.9.0",
        "@sap/hana-client": "^2.13.13",
        "cors": "^2.8.5",
        "cross-origin-resource-policy": "^0.3.0",
        "express": "^4.18.1",
        "hdb": "^0.19.0",
        "helmet": "^5.1.0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.0",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "cds run",
        "build": "cds build/all --clean",
        "env": "cp ./default-env.json ./db/default-env.json && cp ./default-env.json ./srv/default-env.json",
        "watch-citizen": "cds watch --open citizen/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy portal --delete-services --delete-service-keys"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "build": {
            "target": ".",
            "tasks": [
                {
                    "src": "db",
                    "for": "hana",
                    "options": {
                        "model": [
                            "db",
                            "srv"
                        ]
                    }
                },
                {
                    "src": "srv",
                    "for": "node-cf",
                    "options": {
                        "model": [
                            "db",
                            "srv"
                        ]
                    }
                }
            ]
        },
        "hana": {
            "deploy-format": "hdbtable"
        },
        "requires": {
            "db": {
                "kind": "hana-cloud"
            }
        }
    },
    "sapux": [
        "app/citizen"
    ]
}